@model BusinessERP.Models.WarehouseViewModel.TransferItemViewModel

<div class="row">
    <div class="col-6 col-sm-6">
        <div class="form-group row">
            <label asp-for="ItemId" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <select asp-for="ItemId" id="ItemId" onchange="GetByItem()" style="width: 100%;"
                    asp-items="@ViewBag.LoadddlInventoryItem" required>
                    <option value="0" disabled selected>Please Select Item</option>
                </select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CurrentTotalStock" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="CurrentTotalStock" id="CurrentTotalStock" class="form-control" type="number" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FromWarehouseId" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <select asp-for="FromWarehouseId" id="FromWarehouseId" asp-items="@ViewBag.ddlWarehouseList"
                    class="form-control" disabled>
                    <option value="0" disabled selected>Please Select Item</option>
                </select>
                <span asp-validation-for="FromWarehouseId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TotalTransferItem" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="TotalTransferItem" id="TotalTransferItem" onchange="CheckCurrentStock()"
                    class="form-control" type="number" min="1" />
                <span asp-validation-for="TotalTransferItem" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ToWarehouseId" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <select asp-for="ToWarehouseId" id="ToWarehouseId" onchange="WarehouseValidate()"
                    asp-items="@ViewBag.ddlWarehouseList" class="form-control" required>
                    <option value="0" disabled selected>Please Select Item</option>
                </select>
                <span asp-validation-for="ToWarehouseId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-6 col-sm-6">
        <div class="form-group row">
            <label asp-for="ReasonOfTransfer" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <textarea asp-for="ReasonOfTransfer" class="form-control" type="text" rows="2" />
                <span asp-validation-for="ReasonOfTransfer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="button" id="btnSave" value="Transfer Item" onclick="SaveSingleTranItem()"
                    class="btn btn-success">
                <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>