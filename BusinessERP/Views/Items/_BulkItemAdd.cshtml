@model BusinessERP.Models.ItemsViewModel.BulkItemViewModel


<div>
    <form id="frmAttachmentFile">
        <div class="form-group row">
            <label asp-for="FilePath" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FilePath" id="FilePath" class="col-sm-10" readonly />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="button" id="btnSaveBulkItem" value="Add Bulk Item" class="btn btn-info"
                    onclick="SaveBulkItem();">
            </div>
        </div>
    </form>
</div>

<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
