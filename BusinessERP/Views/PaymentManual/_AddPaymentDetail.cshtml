@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div id="divAddPaymentDetail" class="row" style="overflow-x:auto;">
    <table id="tblPaymentDetail" class="BlueGreen" border="1">
        <thead>
            <tr>
                <th>@localizer["Id"]</th>
                <th>@localizer["Item Name"]</th>
                <th>@localizer["Quantity"]</th>
                <th>@localizer["Unit Price"]</th>
                <th id="thVAT">
                    <label id="lblVATPercentage">VAT(%)</label>
                </th>
                <th>@localizer["Discount(%)"]</th>
                <th>@localizer["Total"]</th>
                <th>@localizer["Action"]</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot id="tblAddLabTeststfoot">
            <tr>
                <td style="width:40px;">
                    <input id="PaymentsDetailsId" type="number" class="unstyled-button" style="width: 40px;" readonly />
                </td>
                <td style="width:400px;">
                    <textarea id="ItemName" class="col-sm-12" ></textarea>
                </td>
                <td style="width:70px;">
                    <input id="Quantity" type="number" onchange="onchangeCalculateTotal()" style="width:70px;" class="" value="1" min="1" />
                </td>
                <td style="width:70px;">
                    <input id="UnitPrice" type="number" onchange="onchangeCalculateTotal()" value="0" min="0"></input>
                </td>
                <td style="width:50px;">
                    <input id="ItemVAT" type="number" onchange="onchangeCalculateTotal()" style="width:50px;" value="0" min="0" />
                </td>
                <td id="tdVAT" style="width:70px;">
                    <input id="ItemDiscount" type="number" onchange="onchangeCalculateTotal()" style="width:70px;" value="0" min="0" maxlength="5" />
                </td>
                <td style="width:70px;">
                    <input id="TotalAmount" type="text" style="width:70px;" class="unstyled-button" readonly />
                </td>
                <td style="width:150px;">
                    <button type="button" id="btnPaymentsDetails" onclick="AddPaymentDetail();" 
                    class="btn btn-info btn-xs">@localizer["Add Item"]</button>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<script src="~/js/PaymentManual/PaymentManualDetail_HtmlTblOpr.js"></script>

