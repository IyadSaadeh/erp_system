@model BusinessERP.Models.PaymentViewModel.PaymentReportViewModel

@{
    ViewData["Title"] = "Invoice Report";
}

<div class="row">
    <div class="col-sm-5">
    </div>
    <div class="col-sm-7">
        @if (Model.PaymentCRUDViewModel.Category == 1)
        {
            <h4 id="titleInvoice"><b>INVOICE</b></h4>
        }
        else if (Model.PaymentCRUDViewModel.Category == 3)
        {
            <h4><b>QUOTE</b></h4>
        }
    </div>
</div>

<div class="row">
    <div class="col-sm-7">
        @if (Model.PaymentCRUDViewModel.Category == 1)
        {
            <abbr><b>Invoice No: </b></abbr>
            <span id="InvoiceNo">@Model.PaymentCRUDViewModel.InvoiceNo</span>

            <br>
            <abbr><b>Payment Status: </b></abbr>

            @Model.PaymentCRUDViewModel.PaymentStatusDisplay

            <br>
        }
        else if (Model.PaymentCRUDViewModel.Category == 3)
        {
            <abbr><b>Quote No: </b></abbr>

            @Model.PaymentCRUDViewModel.QuoteNo

            <br>
        }

        <abbr><b>Currency: </b></abbr>@Model.PaymentCRUDViewModel.CurrencyName<br>
        <abbr><b>Branch: </b></abbr>@Model.PaymentCRUDViewModel.BranchName<br>
    </div>
    <div class="col-sm-5 text-right">
        <div class="m-b-15">
            <strong>Name </strong>: @Model.CustomerInfoCRUDViewModel.Name,
            @Model.CustomerInfoCRUDViewModel.AddressPostcode
        </div>
        <div class="m-b-15">
            <strong>Billing Address </strong>: @Model.CustomerInfoCRUDViewModel.BillingAddress,
            @Model.CustomerInfoCRUDViewModel.BillingAddressPostcode
        </div>

        <div class="m-b-15">
            <strong>Email </strong>: @Model.CustomerInfoCRUDViewModel.Email
        </div>
        <div class="m-b-15">
            <strong>Phone </strong>: @Model.CustomerInfoCRUDViewModel.Phone
        </div>


        <hr />
        <div class="m-b-15">
            <strong>Served By </strong>: @Model.PaymentCRUDViewModel.CreatedBy
        </div>
        <div class="m-b-15">
            <strong>Print Date </strong>: @DateTime.Today.ToString("dd MMMM yyyy")
        </div>
    </div>
</div>

<style>
    .panel-heading {
        padding: 0px 0px;
        border-bottom: 0px solid transparent;
        border-top-left-radius: 0px;
        border-top-right-radius: 0px;
    }
</style>
