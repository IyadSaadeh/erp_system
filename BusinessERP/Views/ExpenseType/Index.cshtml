@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="wrapper">
    <div class="panel panel-hash">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-5">                   
                    <a class="fa fa-plus-square fa-2x" onclick="AddEdit(0)"></a>
                </div>
                <div class="col-md-7 pull-right">
                    <h5 class="pull-right"><b>&nbsp;@localizer["Expense Type List"]</b></h5>
                </div>
            </div>
        </div>

        <div class="panel-body scroll panel-height">
            <table id="tblExpenseType" class="ItemTranTable" style="width:100%">
                <thead>
                    <tr>
                        <th>@localizer["Id"]</th>
                        <th>@localizer["Name"]</th>
                        <th>@localizer["Description"]</th>
                        <th>@localizer["Created Date"]</th>
                        <th>@localizer["Modified Date"]</th>
                        <th>@localizer["Created By"]</th>
                        <th>@localizer["Modified By"]</th>

                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<style>
    .panel-heading {
        padding: 0px 0px 0px 5px;
    }

    .panel-body {
        padding: 5px;
    }

    .h4 {
        margin-top: 1px;
        margin-bottom: 1px;
    }
</style>

<script src="~/js/ExpenseType/ExpenseType_CRUD.js"></script>
<script src="~/js/ExpenseType/ExpenseType_Datatable.js"></script>
