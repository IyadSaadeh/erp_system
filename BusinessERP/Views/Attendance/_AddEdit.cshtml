@model BusinessERP.Models.AttendanceViewModel.AttendanceCRUDViewModel
@{

    ViewData["Title"] = "Create";
}
<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmAttendance">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" /> 
                <input type="hidden" asp-for="StayTime" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />
                <div class="form-group row">
                    <label asp-for="EmployeeId" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <select asp-for="EmployeeId" asp-items="@ViewBag._LoadddlEmployee" id="EmployeeId"
                            class="form-control" style="width: 100%;">
                            <option disabled selected>--- SELECT ---</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CheckIn" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="CheckIn" class="form-control" id="CheckIn" />
                        <span asp-validation-for="CheckIn" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CheckOut" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="CheckOut" class="form-control" id="CheckOut" />
                        <span asp-validation-for="CheckOut" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="button" value="Save" onclick="Save()" class="btn btn-info">
                        <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $(document).ready(function () {
        $("#EmployeeId").select2();
    });
</script>